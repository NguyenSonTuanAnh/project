extends ../../layouts/default.pug
include ../../mixin/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                .box-head 
                    +box-head("Danh sach san pham")

        .row 
            .col-4.mb-3 
                .product-item 
                    .inner-image 
                        img(src="https://th.bing.com/th/id/OIP.B0oDSAf72s4y-k8EYRbT4gAAAA?rs=1&pid=ImgDetMain", alt="winnerX")
                    .inner-content  
                        h3.inner-title Winner X 
                        .inner-price-new 59 triệu 
                        .inner-price-old 65 triệu
                        .inner-discount -6 triệu
        .box-head 
            +box-head("San pham cong nghe")
        .row
            each item in product
                .col-4.mb-3 
                    .product-item
                        
                        .inner-image 
                            img(src=item.thumbnail, alt=item.title)
                        .inner-content  
                            h3.inner-title
                                a(href=`/products/${item.slug}`)   #{item.title} 
                            .inner-price-new #{item.price} 
                            .inner-brand Brand: #{item.brand}
                            .inner-stock Stock: #{item.stock}
